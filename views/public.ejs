<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs/dist/tf.min.js"> </script>
    <script src="js/example.js"></script>
    <title>Rakib</title>
</head>


<body class="container">
    <header>
        <%if (locals.name) { %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand">
                Hi <%- name %>
                <a href="/logout">(logout)</a>
        </nav>
        <% } %>

        <%if (locals.status) { %><div style='background-color:greenyellow;display:inline-block;font-weight:bolder'>
            <%- status %></div>
        <% } %>
    </header>
    <main>

        <%if (locals.posts) { %>
        Total <%- posts.length %> posts displaying below:
        <hr>
        <% for(let i=posts.length-1; i >= 0; i--) { %>
        <div class="post-head"><%=i+1%>. <%= posts[i].title %><br> Posted at: <%= posts[i].createdAt %> by
            <%=posts[i].username%>
        </div>
        <div class="post-body"><%= posts[i].body %></div><br>
        <% } %>
        <% } %>



        <footer>
            <%- include('./footer'); %>
        </footer>
    </main>
</body>

</html>
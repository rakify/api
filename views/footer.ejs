<% if (locals.covidstatus) { %>
<p class="text-center text-muted">
    <table width = "100%">Covid 19 Update
        <tr>
            <th width = "50%" align ="center">Bangladesh</th>
            <th width = "50%" align = "center">Global</th>
        </tr>
        <tr>
            <td>
                Confirmed Cases: <%- covidstatus.Bangladesh.All.confirmed %>
            </td>
            <td>
                Confirmed Cases: <%- covidstatus.Global.All.confirmed %>
            </td>
        </tr>
        <tr>
            <td>
                Recovered: <%- covidstatus.Bangladesh.All.recovered %>
            </td>
            <td>
                Recovered: <%- covidstatus.Global.All.recovered %>
            </td>
        </tr>
        <tr>
            <td>
                Total deaths: <%- covidstatus.Bangladesh.All.deaths %>
            </td>
            <td>
                Total deaths: <%- covidstatus.Global.All.deaths %>
            </td>
        </tr>
    </table>
</p>
<% } %>

